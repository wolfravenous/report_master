<div id="unit">
  <header>
    <h1><%= link_to @subject.name, [@subject] %></h1>
  </header>
  <header>
    <h2><%= @unit.title %></h2>

    <ul class="actions">
      <li><%= link_to "Edit Unit", [:edit, @subject, @unit],
        class: "edit" %></li>

      <li><%= link_to "Delete Unit", [@subject, @unit], method: :delete,
        data: { confirm: "Are you sure you want to delete this ticket?" },
        class: "delete" %></li>
    </ul>

  </header>

  <%= simple_format(@unit.content) %>
</div>
