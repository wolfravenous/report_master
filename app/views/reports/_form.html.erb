<%= simple_form_for(report) do |f| %>

  <%= f.input :name %>
  <%= f.input :gender, as: :radio_buttons, collection: ['female', 'male'] %>



    <%= f.association :subject %>

    <%= f.input :intro_id, collection: Subject.all, as: :grouped_select, group_method: :intros %>

    <%= f.input :unit_id, collection: Subject.all, as: :grouped_select, group_method: :units, :include_blank => "(select if none)" %>


    <%= f.input :initial_id, collection: Subject.all, as: :grouped_select, group_method: :units, :include_blank => "(select if none)" %>

    <%= f.input :ending_id, collection: Subject.all, as: :grouped_select, group_method: :units, :include_blank => "(select if none)" %>

    <%= f.input :honor, label: "Honors?" %>
    <%= f.input :accel, label: "Accellerating?" %>
    <%= f.input :maxonline, label: "Maximize Scores for Online Assignments?" %>

    <%= f.input :future_id, collection: Subject.all, as: :grouped_select, group_method: :futures, :include_blank => "(select if none)" %>

  <%= f.input :classwork, label: "Classwork, 0 => NA, 1 => NC" %>
  <%= f.input :assessment, label: "Assessment, 0 => NA, 1 => NC"  %>
  <%= f.input :participate, label: "Participation, 0 => NA, 1 => NC"  %>
  <%= f.input :comment, as: :text, label: 'Personal Comments' %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
