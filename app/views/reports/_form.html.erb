<%= form_for(report) do |f| %>
  <% if report.errors.any? %>
   <div id="error_explanation">
     <h2><%= pluralize(report.errors.count, "error") %>
     prohibited this project from being saved:</h2>
      <ul>
       <% report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name, "Student Name" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.radio_button(:gender, "female") %>
    <%= f.label(:gender_female, "female") %>
    <br>
    <%= f.radio_button(:gender, "male") %>
    <%= f.label(:gender_male, "male") %>
  </p>

  <p>
    <%= f.label :subject_id, "Subject" %><br />
    <%= f.collection_select :subject_id, Subject.order(:name), :id, :name, include_blank: true %>
  </p>


  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>

  <%= f.submit %>
<% end %>
