<%= simple_form_for(report) do |f| %>

  <%= f.input :name %>
  <%= f.input :gender, as: :radio_buttons, collection: ['female', 'male'] %>
  <%= f.association :subject %>
  <%= f.input :unit_id, collection: Subject.all, as: :grouped_select, group_method: :units, prompt: "Select One" %>
  <%= f.input :classwork %>
  <%= f.input :assessment %>
  <%= f.input :participate %>
  <%= f.input :comment %>

  <%= f.button :submit, class: "btn-primary" %>
<% end %>
