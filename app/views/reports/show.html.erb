<% title(@report.name, "Reports") %>

<header>
  <h1><%= @report.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Report", edit_report_path(@report), class: "edit" %></li>
    <li><%= link_to "Delete Report", report_path(@report),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this report?" },
      class: "delete" %></li>
  </ul>
</header>

<p><b><%= :gender.capitalize %>:</b>  <%= @report.gender %></p>
<p><b><%= :subject.capitalize %>:</b>   <%= @report.subject.name %></p>
<p><b><%= :unit.capitalize %>:</b>   <%= @report.unit.title%></p>
<p><b><%= :classwork.capitalize %>:</b>   <%= @report.classwork %></p>
<p><b><%= :assessment.capitalize %>:</b>   <%= @report.assessment %></p>
<p><b><%= :participate.capitalize %>:</b>   <%= @report.participate %></p>
<p><b><%= :average.capitalize %>:</b>   <%= @report.average.to_i %></p>
<p><b><%= :comment.capitalize %>:</b>   <%= @report.comment %></p>
