<% title(@report.name, "Reports") %>
<h1><%= @report.name %></h1>

<%= link_to "Edit Report", edit_report_path(@report) %>

<%= link_to "Delete Report",
    report_path(@report),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this report?" }
%>

<p><%= @report.comment %></p>
