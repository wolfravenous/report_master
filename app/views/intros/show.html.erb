<div id="intro">
  <header>
    <h1><%= link_to @subject.name, [@subject] %></h1>
  </header>


  <header>
    <h2><%= @intro.title %></h2>

    <ul class="actions">
      <li><%= link_to "Edit Intro", [:edit, @subject, @intro],
        class: "edit" %></li>

      <li><%= link_to "Delete Intro", [@subject, @intro], method: :delete,
        data: { confirm: "Are you sure you want to delete this intro?" },
        class: "delete" %></li>
    </ul>

  </header>

  <%= simple_format(@intro.content) %>
</div>
